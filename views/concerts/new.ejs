<% layout("layout/boilerplate") %>
<div class="row">
    <h1 class="text-center">New Concert</h1>
    <div class="col-6 offset-3">
        <form action="/concerts" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="concert[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="concert[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="text" id="title" name="concert[image]">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Concert Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-describedby="price" name="concert[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="location" name="concert[description]"></textarea>
            </div>
            <div>
                <button class="btn btn-success">Add Concert</button>
            </div>
        </form>
        <a href="/concerts">Go Back</a>
       
    </div>
</div>