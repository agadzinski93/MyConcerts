<% layout("layout/boilerplate") %>
<div class="row editContainer">
    <h1 class="text-center">Edit Concert</h1>
    <div class="col-8 offset-2">
        <form action="/concerts/<%= concert._id %>?_method=PUT" method="POST" novalidate class="validation-required">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="concert[title]" value="<%= concert.title %>" required>
                <div class="invalid-feedback">Please enter a title</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="concert[location]" value="<%= concert.location %>" required>
                <div class="invalid-feedback">Please enter a location</div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Concert Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-describedby="price" name="concert[price]" value="<%= concert.price %>" required>
                    <div class="invalid-feedback">Please enter a price</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="concert[description]" required><%= concert.description %></textarea>
                <div class="invalid-feedback">Please enter a description</div>
            </div>
            <div class="addEditButtons">
                <div>
                    <button>Update Concert</button>
                </div>
                <div>
                    <a href="/concerts/<%= concert._id %>"><div>Go Back</div></a>
                </div>
            </div>
        </form>
    </div>
</div>